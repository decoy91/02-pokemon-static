---
import { ClientRouter } from 'astro:transitions'
import '/src/styles/global.css'
import { siteInfo } from 'src/consts/site-info';
import NavBar from '@components/shared/NavBar.astro';
interface Props {
	title?: string;
	image?: string;
	descripcion?: string;
}

const { 
	title = siteInfo.descripcion,
	descripcion = siteInfo.title,
	image
 } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!-- SEO -->
		 <meta name="description" content={ descripcion }  />
		 <meta name="author" content={ 'Alex Herrera' }  />

		 <!-- OG METATAG -->
		  <meta property="og:title" content={ title } />
		  <meta property="og:descripcion" content={ descripcion } />
		  <meta property="og:image" content={ image } />

		<title>{ title }</title>
		<ClientRouter />
	</head>
	<body class="bg-slate-800 text-slate-100 flex flex-col min-h-screen">
		<NavBar />
		<main class="mt-10 mx-auto flex-grow w-full max-w-4xl px4">
			<slot />
		</main>
	</body>
</html>
