---
//name y url
interface Props {
    name?:   string;
    url?:    string;
    isBig?: boolean;
}

const {name, url, isBig = false } = Astro.props
const id = url?.split('/').at(-2)
const imageSrc =`https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${ id }.png`
---

<!-- class={`rounded flex flex-col justify-center items-center p-2 ${!isBig && 'border'}`}> -->
<!-- href={`/pokemons/${name}`} -->
<!-- href={`/pokemon/${id}`} -->
<a
href={`/pokemons/${name}`}

class:list={[
    `rounded flex flex-col justify-center items-center p-2`,
    {
        border: !isBig, //Si la variable es falsa le pone borde
    }
    ]}>
<img 
transition:name={ `${name} - image` }
class:list={[
    {
        'w-60 h-60': isBig,
        'w-22 h-22': !isBig,
    }
]}
src= { imageSrc } alt={name}>

<span 

class:list={[
    `capitalize`,
    {
        'text-4xl text-yellow-300': isBig,
    }
]}>
#{ id } { name }</span>
</a>